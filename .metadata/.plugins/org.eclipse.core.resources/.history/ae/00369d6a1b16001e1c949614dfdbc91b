<title>Insert title here</title>
<script type="text/javascript">
	var s1 = 10;
	var s2 = 6;
	document.write("<h2>");
	document.write("<li>"+(s1+s2)+"</li>");
	document.write("<li>"+(s1-s2)+"</li>");
	document.write("<li>"+(s1*s2)+"</li>");
	document.write("<li>"+(s1/s2)+"</li>");
	document.write("<li>"+(s1%s2)+"</li>");
	document.write("<hr>");
	
	s1 = "10";
	s2 = "6";
	document.write("<li>"+(s1+s2)+"</li>"); // 계산X, 문자 연결자
	document.write("<li>"+(s1-s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1*s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1/s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1%s2)+"</li>"); // 계산가능
	document.write("<hr>");
	
	s1 = 10;
	s2 = "6";
	document.write("<li>"+(s1+s2)+"</li>"); // 계산X, 문자 연결자
	document.write("<li>"+(s1-s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1*s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1/s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1%s2)+"</li>"); // 계산가능
	document.write("<hr>");
	
	s1 = "10";
	s2 = 6;
	document.write("<li>"+(s1+s2)+"</li>"); // 계산X, 문자 연결자
	document.write("<li>"+(s1-s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1*s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1/s2)+"</li>"); // 계산가능
	document.write("<li>"+(s1%s2)+"</li>"); // 계산가능
	document.write("<hr>");
	
	// 숫자를 문자열로 변경 toString()
	s1 = 10;
	s2 = 6;
	document.write("<li>"+(s1+s2)+"</li>");
	document.write("<li>"+(s1.toString()+s2)+"</li>");  // 문자연결자
	
	//toFixed(자리수) : 지정된 소숫점 이하 자릿수 작성(반올림), 음수는 사용 못함
	s1 = 2147.656;
	s2 = 2147.444;
	document.write("<li>"+s1.toFixed(0)+"</li>");  // 2148
	document.write("<li>"+s2.toFixed(0)+"</li>");  // 2147
	document.write("<li>"+s1.toFixed(1)+"</li>");  // 2148
	document.write("<li>"+s2.toFixed(1)+"</li>");  // 2147
	
	
	document.write("</h2>");
	
</script>
